<div class="page-header">
	<h1>사용자 목록</h1>
</div>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>이름</th>
			<th>이메일</th>
			<th>비밀번호</th>
			<th>상세보기</th>
		</tr>
	</thead>
	<tbody>
		{{#if users}}
			{{#each users}}
				<tr>
					<td>{{name}}</td>
					<td>{{email}}</td>
					<td>{{password}}</td>
					<td><a href="#detail/{{id}}" class="btn btn-success">상세보기</a></td>
				</tr>
			{{/each}}
		{{else}}
			<tr>
				<td colspan="4">사용자가 없습니다.</td>
			</tr>
		{{/if}}
	</tbody>
</table>
<a href="#add" class="btn">사용자 추가</a>
