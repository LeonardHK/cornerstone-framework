<div id="inputRange" title="Input Range" class="widget-container">
	<div class="span12">
		{{#if alert}}
			{{body}}        
        {{else}}
			<div class="widget-rangeinput slider-box">
            	<label>
					<input type="range" value="{{value}}" min="{{min}}" max="{{max}}" step="{{step}}" class="widget-range btn-block inline"/>
				</label>
			</div>
        {{/if}}
	</div>
</div>